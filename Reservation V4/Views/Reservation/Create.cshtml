@model Reservation_V4.Models.Reservation

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date"  class="control-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div>
                <p>Reservation Type :</p>
                <select asp-for="ReservationTypeId" asp-items="ViewBag.reservatiolist as SelectList">
                    <option selected disabled>Types</option>
                </select>
                
                 <div class="form-group">
                <label hidden="hidden" asp-for="Status"   class="control-label"></label>
                <input hidden="hidden" asp-for="Status" disabled="disabled" value="2"  class="form-control" />
                <span asp-validation-for="Status"  class="text-danger"></span>
            </div>
                
                
                
                @*@Html?.DropDownList("Id", ViewBag.reservatiolist as SelectList, "ReservationName", new {@class = "from-control"})*@
                
               
            </div>
            @*<div>
                @ViewBag.reso
            </div>*@

      
            <div class="form-group">
                <label asp-for="Cause" class="control-label"></label>
                <input asp-for="Cause"  class="form-control" />
                <span asp-validation-for="Cause" class="text-danger"></span>
            </div>
            
            
         
            
            

            <div class="form-group  d-none">
                <label asp-for="Status"  class="control-label"></label>
                
                <input asp-for="Status" value="Pending" disabled="disabled"  class="form-control" />
                
            </div>
            
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
