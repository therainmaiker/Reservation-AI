@{
}
@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "AssignRole";
    Layout = "_Layout";

}





<div class="container">
    <div class="row" style="background-color:#137771;">

       

        <div class=" card-body  col-6 offset-3">
            <form asp-action="AssignRole" asp-controller="Role" method="post">
                <div class="form-group">
                     <h3 class="text-capitalize font-weight-bolder btn-danger text-center ">Add User To Role</h3>
                    <label>Select UserName</label>
                    <select asp-for="Id" asp-items="@ViewBag.getusers" class="form-control">
                        <option selected disabled>--Select User--</option>

                    </select>
                </div>

                <div class="form-group">
                    <label>Select Role Name</label>
                    <select asp-for="Name" asp-items="@ViewBag.getroles" class="form-control">
                        <option selected disabled>--Select Role</option>
                    </select>
                </div>

                <input type="submit" class="btn btn-outline-primary btn-block" value="Assign" />
                <a asp-action="Index" class="btn btn-outline-danger btn-block">Cancel</a>
            </form>
        </div>
    </div>
</div>